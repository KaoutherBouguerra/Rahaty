<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame"
    tools:context="art4muslim.macbook.rahatycustomer.fragments.orders.OrderDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:id="@+id/relativeLayoutGlob">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="26dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorAccent" />
        <nl.dionsegijn.konfetti.KonfettiView
            android:id="@+id/viewKonfetti"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="10dp"


        android:id="@+id/relativeLayout1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:id="@+id/relative1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/full_round_rect_shape"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:id="@+id/grid_image"
                    android:layout_width="50dp"
                    android:src="@mipmap/cat_gaz"
                    android:paddingTop="6dp"
                    android:layout_height="50dp">
                </ImageView>

                <TextView
                    android:id="@+id/grid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:text="غاز"
                    android:layout_marginBottom="6dp"
                    android:textSize="9sp" >
                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_toRightOf="@+id/linearLayout2"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/ll"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearProducts"
                    android:orientation="vertical">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:id="@+id/btn_sum"
                        android:background="@drawable/full_rectangle_green"
                        android:text="الإجمالي 200 ريال"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textSize="10dp"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        />

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:src="@mipmap/edit" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:background="@color/colorTooLightBlue"
            android:id="@+id/relative2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <art4muslim.macbook.rahatycustomer.utils.circularimageview.CircularImageView
                    android:id="@+id/imDriver"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/user_profile_image_background"
                    android:elevation="4dp"
                    android:padding="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_drawable_padding"
                        android:paddingStart="@dimen/activity_drawable_padding"
                        android:layout_marginBottom="4dp"
                        android:text="محمد ندير علي"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/txt_customer_name"

                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/txtPhone"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_drawable_padding"
                        android:paddingStart="@dimen/activity_drawable_padding"
                        android:textSize="9dp"
                        android:textColor="@color/colorPrimary"
                        android:text="00334252171" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/btn_call"
                android:background="@drawable/full_rectangle_red"
                android:text="@string/callCustomer"
                android:drawableRight="@mipmap/call"
                android:drawableEnd="@mipmap/call"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginEnd="10dp"
                android:drawablePadding="6dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_weight="1"
        android:scrollbars="vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_done"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@color/color_green"
            android:text="@string/txt_okrequest"
            android:layout_weight="0.5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:textAllCaps="false"
            android:text="@string/cancelOrder"
            android:background="@color/red"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            />
    </LinearLayout>



</RelativeLayout>
</RelativeLayout>
